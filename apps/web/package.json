{
  "name": "dinein-web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:cloudflare": "npm ci --legacy-peer-deps && npm run typecheck && npm run build",
    "preview": "vite preview",
    "start": "serve -s dist -l $PORT",
    "typecheck": "tsc --noEmit",
    "deploy:cloudflare": "./deploy-cloudflare.sh",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "android:build": "npm run build && cap sync && cd android && ./gradlew assembleRelease",
    "android:build:debug": "npm run build && cap sync && cd android && ./gradlew assembleDebug",
    "firebase:deploy": "firebase deploy --only hosting",
    "deploy:all": "npm run build && npm run firebase:deploy"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@google/genai": "*",
    "@remix-run/router": "1.16.1",
    "@sentry/react": "^7.120.4",
    "@sentry/tracing": "^7.120.4",
    "@supabase/supabase-js": "^2.45.0",
    "@tanstack/react-query": "^5.90.16",
    "clsx": "2.1.0",
    "framer-motion": "10.16.4",
    "jspdf": "2.5.1",
    "jszip": "3.10.1",
    "qrcode": "1.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "2.4.1",
    "react-lazy-load-image-component": "^1.6.3",
    "react-router-dom": "6.28.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5",
    "serve": "^14.2.5",
    "tailwind-merge": "2.2.1",
    "web-vitals": "^5.1.0",
    "yallist": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^20.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.13",
    "terser": "^5.44.1",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17",
    "workbox-window": "^7.4.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
