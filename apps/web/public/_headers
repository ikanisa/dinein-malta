# =============================================================================
# Cloudflare Pages Headers Configuration
# Production Security Headers + Cache Control for DineIn Malta PWA
# Last Updated: 2026-01-16
# =============================================================================

# -----------------------------------------------------------------------------
# Global Security Headers (all routes)
# -----------------------------------------------------------------------------
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(self), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=(), ambient-light-sensor=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' data: https://fonts.gstatic.com https://fonts.googleapis.com; connect-src 'self' https://*.supabase.co https://elhlcdiosomutugpneoc.supabase.co https://cloudflareinsights.com; frame-ancestors 'none';
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# -----------------------------------------------------------------------------
# HTML Pages - No cache (ensure fresh content after deploys)
# -----------------------------------------------------------------------------
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Root path (serves index.html)
/
  Cache-Control: no-cache, no-store, must-revalidate

# -----------------------------------------------------------------------------
# Hashed Assets - Immutable cache (1 year)
# Vite outputs files like: assets/js/index-abc123.js
# -----------------------------------------------------------------------------
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# -----------------------------------------------------------------------------
# Service Worker - Never cache (critical for PWA updates)
# -----------------------------------------------------------------------------
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

/workbox-*.js
  Cache-Control: no-cache, no-store, must-revalidate

# -----------------------------------------------------------------------------
# PWA Manifest - Short cache (allows updates)
# -----------------------------------------------------------------------------
/manifest.json
  Cache-Control: no-cache

# -----------------------------------------------------------------------------
# Static files (icons, images in public folder)
# -----------------------------------------------------------------------------
/icons/*
  Cache-Control: public, max-age=86400

/favicon.ico
  Cache-Control: public, max-age=86400

/apple-touch-icon.png
  Cache-Control: public, max-age=86400

# -----------------------------------------------------------------------------
# Fonts - Long cache (loaded via CSS)
# -----------------------------------------------------------------------------
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/fonts.css
  Cache-Control: public, max-age=86400

# -----------------------------------------------------------------------------
# Screenshots (PWA manifest) - Daily refresh
# -----------------------------------------------------------------------------
/screenshots/*
  Cache-Control: public, max-age=86400

# -----------------------------------------------------------------------------
# Sounds - Weekly cache (audio assets)
# -----------------------------------------------------------------------------
/sounds/*
  Cache-Control: public, max-age=604800

# -----------------------------------------------------------------------------
# Offline fallback - Never cache (must be fresh)
# -----------------------------------------------------------------------------
/offline.html
  Cache-Control: no-cache, no-store, must-revalidate

# -----------------------------------------------------------------------------
# Robots.txt - Daily refresh
# -----------------------------------------------------------------------------
/robots.txt
  Cache-Control: public, max-age=86400

